@model Vehicle

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            VIN
        </dt>
        <dd class="col-sm-10">
            @Model.VIN
        </dd>
        <dt class="col-sm-2">
           UserEmail
        </dt>
        <dd class="col-sm-10">
            @Model.UserEmail
        </dd>
        <dt class="col-sm-2">
           ModelYear
        </dt>
        <dd class="col-sm-10">
            @Model.ModelYear
        </dd>
        <dt class="col-sm-2">
           Colour
        </dt>
        <dd class="col-sm-10">
            @Model.Colour
        </dd>
        <dt class="col-sm-2">
            PurchaseDate
        </dt>
        <dd class="col-sm-10">
            @Model.PurchaseDate
        </dd>
        <dt class="col-sm-2">
            SaleDate
        </dt>
        @if (Model.SaleDate != null)
        {
            <dd class="col-sm-10">
                @Model.SaleDate
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
               Not Sold
            </dd>
        }

        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model.Name
        </dd>
        <dt class="col-sm-2">
            Manufacturer
        </dt>
        <dd class="col-sm-10">
            @Model.Manufacturer.Name
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
